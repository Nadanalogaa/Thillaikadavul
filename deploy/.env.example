# Environment Variables for Portainer VPS Deployment
# Copy this file to .env in your Portainer stack and update the values

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
POSTGRES_PASSWORD=your-super-secure-postgres-password-here
DATABASE_URL=postgresql://nadanaloga_user:your-super-secure-postgres-password-here@postgres:5432/nadanaloga

# =================================================================
# APPLICATION SECURITY
# =================================================================
SESSION_SECRET=your-super-secure-session-secret-key-change-this-immediately
NODE_ENV=production

# =================================================================
# SUPABASE CONFIGURATION (Required)
# =================================================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anonymous-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password
EMAIL_FROM=noreply@yourdomain.com

# =================================================================
# AI CONFIGURATION (Optional - for content generation)
# =================================================================
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# =================================================================
# DOMAIN CONFIGURATION (Update for your VPS)
# =================================================================
DOMAIN=yourdomain.com
# For development/testing, you can use your VPS IP:
# DOMAIN=your-vps-ip-address

# =================================================================
# SSL/HTTPS CONFIGURATION
# =================================================================
# Set to 'true' when you have SSL certificates configured
USE_SSL=false
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem